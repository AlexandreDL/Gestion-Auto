{% extends 'base.html.twig' %}

{% block title %}Liste des véhicules
{% endblock %}

{% block body %}
	<h1 class="alert alert-info text-center">Liste des véhicules</h1>
	<table class="table text-center">
		<thead>
			<tr>
				<th>Id</th>
				<th>Immatriculation</th>
				<th>Marque</th>
				<th>Modèle</th>
				<th>Couleur</th>
				<th>
					<form class="text-center" action="{{ path('vehicle_new') }}" method="post">
						<button type="submit" class="btn btn-success">
							<i class="fa fa-plus fa-lg"></i>
						</button>
					</form>
				</th>
			</tr>
		</thead>
		<tbody>
			{% for vehicle in vehicles %}
				<tr>
					<td>{{ vehicle.id }}</td>
					<td>{{ vehicle.matriculation }}</td>
					<td>{{ vehicle.brand }}</td>
					<td>{{ vehicle.model }}</td>
					<td>{{ vehicle.color }}</td>
					<td class="d-flex justify-content-center">
						<a href="{{ path('vehicle_show', {'id': vehicle.id}) }}" class="btn btn-info mr-2">
							<i class="fa fa-eye fa-lg" aria-hidden="true"></i>
						</a>
						<a href="{{ path('vehicle_edit', {'id': vehicle.id}) }}" class="btn btn-warning mr-2">
							<i class="fa fa-pencil fa-lg" aria-hidden="true"></i>
						</a>
						<form action="{{ path('vehicle_delete', {'id': vehicle.id}) }}" method="post">
							<button type="submit" class="btn btn-danger">
								<i class="fa fa-trash fa-lg"></i>
							</button>
						</form>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="6" class="alert alert-danger">Aucun véhicule trouvé !</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
{% endblock %}